<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="assets/css/index.css" />
    <link rel="stylesheet" href="popupS.css" />
    <title>RepoMan</title>
  </head>

  <body>
    <!-- NavBar -->
    <div>
      <%- include ("navbar") -%>
    </div>
    <!-- Main Content -->
    <div class="container mt-2">
      <div class="row">
        <!-- Content  -->
        <div class="col">
          <div class="card border-0 bg-transparent">
            <div class="card-body m-1 rounded" id="main-content-area">
              <div class="col-md-6">
                <h2 class="text-dark text-left">Returning Member</h2>

                <form action="/login" id="form" method="post">
                  <div class="form-group">
                    <label for="email">Email address</label>
                    <input
                      type="email"
                      class="form-control"
                      name="email"
                      id="email"
                      required
                      aria-describedby="emailHelp"
                      placeholder="Enter email"
                    />
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                      placeholder="Password"
                    />
                  </div>
                  <!-- <div class="form-check">
                    <input
                      type="checkbox"
                      class="form-check-input"
                      id="exampleCheck1"
                    />
                    <label
                      class="form-check-label"
                      name="remember"
                      for="exampleCheck1"
                      >Remember Me
                    </label>
                  </div>

               <br /> -->
                  <% if(error!=''){ %>
                  <div class="alert alert-danger" role="alert">
                    <%=error%>
                  </div>
                  <%}%>
                  <button type="submit" class="btn btn-primary">Login</button>
                </form>

                <br />
              </div>

              <div class="col-md-6">
                <span class="psw">
                  Forgot <a href="/passwordReset">password?</a></span
                >
                <p>
                  Not a member. <a href="/register">Click here to register</a>
                </p>
              </div>
            </div>
          </div>
        </div>
        <!-- Ad Space -->
        <div class="co-sm-3">
          <div id="vertical-ad-space">
            <% for(var i=0; i< SideBarImagesList.length; i++) { %>
            <img class="vertical-ad-img" src="<%= SideBarImagesList[i] %>" />
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-sm-2">
            <div class="footer-div">
              <ul class="footer-list" style="list-style-type: none;">
                <a href="/sitePolicy">
                  <li class="footer-text">Privacy Policy</li>
                </a>

                <a href="/customer">
                  <li class="footer-text">Your Account</li>
                </a>
                <a href="/aboutUSAWeb">
                  <li class="footer-text">About USA Web</li>
                </a>
              </ul>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="footer-div">
              <ul class="footer-list" style="list-style-type: none;">
                <a href="/customer">
                  <li class="footer-text">Payment</li>
                </a>
                <a href="/contactUs">
                  <li class="footer-text">Contact Us</li>
                </a>
                <a href="/refund">
                  <li class="footer-text">Refund Policy</li>
                </a>
              </ul>
            </div>
          </div>
          <div class="col-sm-3"></div>
          <div class="col-sm-4">
            <img
              id="footer-img"
              src="assets/images/large-rm-logo.png"
              alt="RepoMan.com"
            />
          </div>
        </div>
        <hr />

        <div class="row">
          <div class="col-sm-8"></div>
          <div class="col-sm-4">
            <p class="footer-text">Copyright Â© USAWeb 1995-2019</p>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
