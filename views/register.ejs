    <!-- Main Content -->
    <div class="container mt-2">
      <div class="row">
        <!-- Content  -->
        <div class="col">
          <div class="card border-0 bg-transparent">
            <div class="card-body m-1 rounded" id="main-content-area">
              <div id="register">
                <h3 class="text-dark text-left">Register Company</h3>
                <br />

                <form action="/register" method="post">
                  <% if(error!=''){ %>
                  <div class="alert alert-danger" role="alert">
                    <%=error%>
                  </div>
                  <%}%>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="firstName">First Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="firstName"
                        name="firstName"
                        placeholder="First Name"
                        value="<%=userObj.firstName%>"
                        required
                      />
                    </div>
                    <div class="form-group col-md-6">
                      <label for="firstName">Last Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="lastName"
                        name="lastName"
                        placeholder="Last Name"
                        value="<%=userObj.lastName%>"
                        required
                      />
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="email">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      name="email"
                      placeholder="xyz@gmail.com"
                      value="<%=userObj.email%>"
                      required]
                    />
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="email">Password</label>
                      <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        value="<%=userObj.password%>"
                        placeholder="Password"
                      />
                    </div>
                    <div class="form-group col-md-6">
                      <label for="email">Confirm Password</label>
                      <input
                        type="password"
                        class="form-control"
                        id="confirmpassword"
                        name="confirmpassword"
                        value="<%=userObj.confirmpassword%>"
                        placeholder="Confirm Password"
                      />
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="company">Company</label>
                    <input
                      type="text"
                      class="form-control"
                      id="company"
                      name="company"
                      placeholder="Company"
                      value="<%=userObj.company%>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="website">Website</label>
                    <input
                      type="text"
                      class="form-control"
                      name="website"
                      id="website"
                      value="<%=userObj.website%>"
                      placeholder="Website"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="email">Address</label>
                    <input
                      type="text"
                      class="form-control"
                      id="address"
                      name="address1"
                      value="<%=userObj.address1%>"
                      placeholder="1234 Main St"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      id="address2"
                      name="address2"
                      value="<%=userObj.address2%>"
                      placeholder="Apartment, studio, or floor"
                      required
                    />
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="country">Country</label>
                      <select
                        id="country"
                        name="country"
                        class="form-control"
                        value="<%=userObj.country%>"
                      ></select>
                    </div>
                    <div class="form-group col-md-4">
                      <label for="state">State</label>
                      <select
                        id="state"
                        name="state"
                        value="<%=userObj.state%>"
                        class="form-control"
                      ></select>
                    </div>
                    <div class="form-group col-md-2">
                      <label for="zip">Zip</label>
                      <input
                        type="number"
                        class="form-control"
                        id="zip"
                        name="zip"
                        value="<%=userObj.zip%>"
                        placeholder="Zip code"
                      />
                    </div>
                  </div>
                  <script type="text/javascript" src="countries.js"></script>
                  <script language="javascript">
                    populateCountries("country", "state"); // first parameter is id of country drop-down and second parameter is id of state drop-down
                    populateCountries("country2");
                    populateCountries("country2");
                  </script>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="phone">Phone No</label>
                      <input
                        type="number"
                        class="form-control"
                        id="phone"
                        name="phoneNo"
                        value="<%=userObj.phoneNo%>"
                        placeholder="Phone Number"
                      />
                    </div>
                    <div class="form-group col-md-6">
                      <label for="fax">Fax No</label>
                      <input
                        type="number"
                        class="form-control"
                        id="fax"
                        name="faxNo"
                        value="<%=userObj.faxNo%>"
                        placeholder="Fax Number"
                      />
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="description">Company Description</label>
                    <textarea
                      class="form-control"
                      id="companyDesc"
                      placeholder="Company Description"
                      rows="3"
                      value="<%=userObj.companyDesc%>"
                      name="companyDesc"
                    ></textarea>
                  </div>

                  <button type="submit" class="btn btn-primary">
                    Register
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- Ad Space -->
        <div class="co-sm-3">
