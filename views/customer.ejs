<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="app/json" href="payment.json" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./assets/css/index.css" />

    <title>RepoMan</title>
  </head>

  <body>

    <div>
    <%- include ("navbar") -%>
  </div>
   
    <!-- Main Content -->
    <div class="container">
      <!-- Content  -->
      <div class="border-0 bg-transparent">
        <div class="card-body" id="main-content-area">
          <h1 class="text-dark">My Account - Member Information</h1>
          <br />
          <div class="row">
            <div class="col-1">
              <label><b>First Name:</b></label>
            </div>
            <div class="col-11">
              <label><%=userObj.firstName%></label>
            </div>
          </div>
          <div class="row">
            <div class="col-1">
              <label><b>Last Name:</b></label>
            </div>
            <div class="col-11">
              <label><%=userObj.lastName%></label>
            </div>
          </div>
          <div class="row">
            <div class="col-1">
              <label><b>Email:</b></label>
            </div>
            <div class="col-11">
              <label><%=userObj.email%></label>
            </div>
          </div>

          <br />
          <a href="/update" class="btn btn-primary">Update</a>
          <a href="/addCompany" class="btn btn-primary">Add New Company</a>
          <% if(userObj.isAdmin == 1) { %>
          <p></p>
          <a href="/admin">Approve/View Companies </a>
          <p></p>
          <label>Add advertise Image: </b> </label>
          <form
            id="sideImage"
            action="/addAdvertiseImage"
            enctype="multipart/form-data"
            method="POST"
          >
            <input type="file" name="file" />
            <button type="submit" class=" text text-primary">
              Add
            </button>
          </form>

          <% } %>

          <br /><br />
          <form
            action="https://www.sandbox.paypal.com/cgi-bin/webscr"
            method="post"
            target="_top"
          >
            <input type="hidden" name="cmd" value="_s-xclick" />
            <input
              type="hidden"
              name="hosted_button_id"
              value="QX2X47Y53AU92"
            />
            <table>
              <tr>
                <td>
                  <input
                    type="hidden"
                    name="on0"
                    value="Listing Options"
                  /><strong>Listing Options</strong>
                </td>
              </tr>
              <tr>
                <td>
                  <select name="os0">
                    <option value="Basic Option"
                      >Basic Option $100.00 USD</option
                    >
                    <option value="Basic Insured Listing"
                      >Basic Insured Listing $100.00 USD</option
                    >
                    <option value="Enhanced Listing"
                      >Enhanced Listing $600.00 USD</option
                    >
                    <option value="Enhanced Listing with Multi-Media Ads"
                      >Enhanced Listing with Multi-Media Ads $800.00 USD</option
                    >
                  </select>
                </td>
              </tr>
            </table>

            <input type="hidden" name="currency_code" value="USD" />
            <input
              type="image"
              src="https://www.sandbox.paypal.com/en_US/i/btn/btn_buynowCC_LG.gif"
              border="0"
              name="submit"
              alt="PayPal - The safer, easier way to pay online!"
            />
            <img
              alt=""
              border="0"
              src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif"
              width="1"
              height="1"
            />
          </form>
        </div>
      </div>
    </div>
    <!-- Ad Space -->
    <div id="scroller" style="width: 1110px; height: 75px; margin: 0 auto;">
      <div class="innerScrollArea">
        <ul>
          <% for(var i=0; i< SideBarImagesList.length; i++) { %>
          <li>
            <img class="ad-img" src="<%= SideBarImagesList[i] %>" />
          </li>
          <% } %>
        </ul>
      </div>
    </div>

    <!-- Footer -->
    <div id="footer" class="mt-2">
      <div class="container">
        <div class="row">
          <div class="col-sm-2">
            <div class="footer-div">
              <ul class="footer-list" style="list-style-type:none">
                <a href="/sitePolicy">
                  <li class="footer-text">Privacy Policy</li>
                </a>
                <a href="/account">
                  <li class="footer-text">Your Account</li>
                </a>
                <a href="/aboutUSAWeb">
                  <li class="footer-text">About USA Web</li>
                </a>
              </ul>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="footer-div">
              <ul class="footer-list" style="list-style-type:none">
                <a href="/payment">
                  <li class="footer-text">Payment</li>
                </a>
                <a href="/contactUs">
                  <li class="footer-text">Contact Us</li>
                </a>
                <a href="/refund">
                  <li class="footer-text">Refund Policy</li>
                </a>
              </ul>
            </div>
          </div>
          <div class="col-sm-3"></div>
          <div class="col-sm-4">
            <img
              id="footer-img"
              src="assets/images/large-rm-logo.png"
              alt="RepoMan.com"
            />
          </div>
        </div>
        <hr />

        <div class="row">
          <div class="col-sm-8"></div>
          <div class="col-sm-4">
            <p class="footer-text">Copyright Â© USAWeb 1995-2019</p>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.4.1.js"
      integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
    <script src="assets/js/index.js"></script>

    <!-- Load the required checkout.js script -->
    <script
      src="https://www.paypalobjects.com/api/checkout.js"
      data-version-4
    ></script>

    <!-- Load the required Braintree components. -->
    <script src="https://js.braintreegateway.com/web/3.39.0/js/client.min.js"></script>
    <script src="https://js.braintreegateway.com/web/3.39.0/js/paypal-checkout.min.js"></script>
  </body>
</html>
